# Kinvex Core - Variables de Entorno
# Copiar este archivo como .env y configurar los valores apropiados

# ===== CONFIGURACIÓN GENERAL =====
SPRING_PROFILES_ACTIVE=dev
APP_VERSION=1.0.0
APP_CONTACT_NAME=Kinvex Team
APP_CONTACT_EMAIL=support@kinvex.com

# ===== SERVIDOR =====
SERVER_PORT=8080
CONTEXT_PATH=/
SERVER_TOMCAT_MAX_THREADS=200
SERVER_TOMCAT_MIN_SPARE_THREADS=10
SERVER_TOMCAT_MAX_CONNECTIONS=8192

# ===== BASE DE DATOS =====
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kinvex
DB_USERNAME=kinvex_user
DB_PASSWORD=kinvex_password
DB_POOL_SIZE=10
DB_POOL_MIN_IDLE=5
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000

# ===== REDIS =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_TIMEOUT=2000ms
REDIS_POOL_MAX_ACTIVE=8
REDIS_POOL_MAX_IDLE=8
REDIS_POOL_MIN_IDLE=0

# ===== CACHE =====
CACHE_TTL=3600000

# ===== JWT =====
JWT_SECRET=your-secret-key-change-in-production-must-be-at-least-256-bits
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=86400
JWT_ISSUER=kinvex-system
JWT_AUDIENCE=kinvex-users
JWT_ISSUER_URI=http://localhost:8080

# ===== CORS =====
CORS_ALLOWED_ORIGINS=http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# ===== LOGGING =====
LOG_FILE=/var/log/kinvex/kinvex-core.log
LOG_MAX_FILE_SIZE=100MB
LOG_MAX_HISTORY=30
LOG_TOTAL_SIZE_CAP=3GB

# ===== SEGURIDAD =====
REQUIRE_SSL=false
SESSION_TIMEOUT=1800

